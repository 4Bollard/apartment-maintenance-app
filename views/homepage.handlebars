<div class="row align-center mb-5">
    <div class="col-md-6">
        <h2>Welcome! </h2>
    </div>
    <div class="col-md-6">
        {{!-- <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3> --}}
    </div>
</div>
<div>
    <div class="form-group">

        <button class="btn btn-seccondary" onClick="window.location.href='/issue'" type="issue"> maintenance help
            request</button>



    </div>
    <div>
        <h4>Active issues </h4>
        <div id="active-issues">
            {{#each issues as |issue| }}
            {{#if issue.active}}
            <div>
                <h6>{{issue.tenant_id}}</h6>
                <h6>{{issue.room}}</h6>
                <p>{{issue.issue}}</p>
                <button id={{issue.id}} class="btn btn-primary completeIssue" type="click">Complete</button>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <h4 class="animate__animated animate__slideInRight"></h4>>Completed issues</h4>
    <div id="completed-issues">
        {{#each issues as |issue| }}
        {{#unless issue.active}}
        <div>
            <h6>{{issue.tenant_id}}</h6>
            <h6>{{issue.room}}</h6>
            <p>{{issue.issue}}</p>
            <button id={{issue.id}} class="btn btn-primary deleteIssue" type="click">Archive</button>
        </div>
        {{/unless}}
        {{/each}}

    </div>
    <script type="text/javascript" src="/js/homepage.js"></script>
</div>


